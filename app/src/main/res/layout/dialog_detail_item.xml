<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="550dp"
    android:padding="10dp"
    android:background="@drawable/rounded_background_white">

    <ImageView
        android:id="@+id/imgv_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_close" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/imgv_item"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/soyjoy"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/rounded_background_white_stroke">

            <TextView
                android:id="@+id/txvw_qty"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:text="1"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_gravity="center"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/black"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/imgv_up"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_arrow_up"/>

                <ImageView
                    android:id="@+id/imgv_down"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_arrow_down"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/item_harga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp 10.000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_light"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="20dp"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:weightSum="4">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@android:color/black"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:layout_weight="0.2"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:textColor="@android:color/black"
            android:gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:layout_weight="1.4"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:layout_weight="0.2"/>

        <TextView
            android:id="@+id/item_nama"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:gravity="center_vertical"
            android:layout_weight="2.2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:weightSum="4">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="2"
            android:textColor="@android:color/black"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:layout_weight="0.2"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Distributor"
            android:textColor="@android:color/black"
            android:gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:layout_weight="1.4"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:layout_weight="0.2"/>

        <TextView
            android:id="@+id/item_distributor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:gravity="center_vertical"
            android:layout_weight="2.2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:weightSum="4">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="3"
            android:textColor="@android:color/black"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:layout_weight="0.2"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Masa Berlaku"
            android:textColor="@android:color/black"
            android:gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:layout_weight="1.4"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:layout_weight="0.2"/>

        <TextView
            android:id="@+id/item_masa_berlaku"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:gravity="center_vertical"
            android:layout_weight="2.2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:weightSum="4">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="4"
            android:textColor="@android:color/black"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:layout_weight="0.2"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tanggal Masuk"
            android:textColor="@android:color/black"
            android:gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:layout_weight="1.4"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:layout_weight="0.2"/>

        <TextView
            android:id="@+id/item_tanggal_masuk_barang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:gravity="center_vertical"
            android:layout_weight="2.2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:weightSum="4">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="5"
            android:textColor="@android:color/black"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:layout_weight="0.2"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Berat"
            android:textColor="@android:color/black"
            android:gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:layout_weight="1.4"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:layout_weight="0.2"/>

        <TextView
            android:id="@+id/item_berat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:gravity="center_vertical"
            android:layout_weight="2.2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:weightSum="4">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="6"
            android:textColor="@android:color/black"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:layout_weight="0.2"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Stok"
            android:textColor="@android:color/black"
            android:gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:layout_weight="1.4"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:layout_weight="0.2"/>

        <TextView
            android:id="@+id/item_stok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:gravity="center_vertical"
            android:layout_weight="2.2"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_add"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:background="@drawable/rounded_button_yellow"
        android:text="TAMBAH KE KERANJANG"
        android:textSize="16sp"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/btn_cart"
        android:layout_width="308dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:text="DAFTAR BELANJA"/>

</LinearLayout>